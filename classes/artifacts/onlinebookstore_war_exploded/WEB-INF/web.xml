<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Static Files-->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

    <!--Home page-->
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>api.controller.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!--Shopping Cart page-->
    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>api.controller.CartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <!--Book Order Page-->
    <servlet>
        <servlet-name>order</servlet-name>
        <servlet-class>api.controller.OrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <!--Login Page-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>api.controller.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--Signup Page-->
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>api.controller.SignUp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <!--Book Details Page-->
    <servlet>
        <servlet-name>bookdetails</servlet-name>
        <servlet-class>api.controller.BookDetailsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bookdetails</servlet-name>
        <url-pattern>/book-details</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>api.controller.LogOutController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>confirmation</servlet-name>
        <servlet-class>api.controller.confirmation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>confirmation</servlet-name>
        <url-pattern>/confirmation</url-pattern>
    </servlet-mapping>


    <!--Filters -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>api.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>